<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PostAppWithKolin" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/prime</item>
        <item name="colorPrimaryVariant">#D64F57</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/prime</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonStyle" parent="ThemeOverlay.Material3.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/prime</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_message_24</item>
    </style>

    <style name="LoginStyel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/prime</item>
        <item name="boxStrokeWidth">@dimen/_2sdp</item>
        <item name="hintTextColor">@color/prime</item>
    </style>

    <style name="editTextStyle" parent="Widget.Material3.TextInputEditText.OutlinedBox.Dense">
        <item name="civ_border_color">@color/white</item>
        <item name="borderRound" >@dimen/_5sdp</item>
    </style>
</resources>